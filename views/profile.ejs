<!doctype html>
<html>
<head>
    <title>Moon Coffee</title>
    <link rel="shortcut icon" href="img/logo.png">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
  <body>

  <span id="none" class="userEmail"><%= user.local.email %></span>

    <div class="page-header text-center">
        <h1>Moon Coffe orders</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>



          <h3>Order Queue</h3>
          <ul class="orders">
            <% for(var i=0; i < orders.length; i++) {%>
              <% if(orders[i].completed === undefined){ %>

                <li class="order">


              <span><%= orders[i].customer %></span>
              <span><%= orders[i].order %></span>
            </li>
            <% } %>
  <% } %>

          </ul>

          <h3>Completed Orders</h3>
          <ul class="orders red">
            <% for(var i=0; i< orders.length; i++) {%>
              <% if (orders[i].completed === true && user.local.email == orders[i].name) { %>
            <li>
              <span><%= orders[i].name %></span>
              <span><%= orders[i].customer %></span>
              <span><%= orders[i].order %></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
            <% } %>
          </ul>

        <script src="main.js"></script>
    </body>
</html>
